{% extends "_layout.njk" %}
{% import "_macro/ui.njk" as ui %}

{% block content %}
    {% if page.posts and page.posts.length > 0 %}
    {% for post in page.posts.toArray() %}
        {% include "_partial/components/post-card.njk" %}

        {% if not loop.last %}
            {{ ui.divider("my-8") }}
        {% endif %}
    {% endfor %}
    {% else %}
        {% include "_partial/common/empty.njk" %}
    {% endif %}

    {% include "_partial/common/pagination.njk" %}
{% endblock %}
